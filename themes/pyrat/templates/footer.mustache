    <div>{{! footer}}
    <section id="wrapper">
      {{#show-meta}}
      <div class="post-meta">
        <span title="post date" class="post-info">{{{date}}}</span>
        <span title="tags" class="post-info">{{{tag-links}}}</span>
      </div>
      {{/show-meta}}
      <br />
      <br />
      <div align="center">
      <footer id="footer">
        <p class="small">
          Copyright &copy; 2018 - <span id="footerYear"></span> - {{author}}
          &nbsp;&nbsp;-&nbsp;&nbsp;
          Powered by <a href="https://github.com/jf-parent/org-page" target="_blank">org-page</a>
          <script type="text/javascript">document.getElementById("footerYear").innerHTML = (new Date()).getFullYear();</script>
        </p>
        <br />
      </footer>
      </div>
      </section>
    </div>
